@model CategoryModel

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Category</h2>
                </hr>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Name"> </label>
                <input class="form-control" asp-for="Name" placeholder="Enter Category Name" />
                <span asp-validation-for="Name" class="text-danger"> </span>
            </div>
    
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder"></label>
                    <input class="form-control" asp-for="DisplayOrder" placeholder="Enter Display Order" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"> </span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                </div>
            </div>
            
            
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
