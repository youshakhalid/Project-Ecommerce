@model ProductModel

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Product</h2>
                </hr>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Title"> </label>
                <input class="form-control" asp-for="Title" disabled placeholder="Enter Category Name" />
                <span asp-validation-for="Title" class="text-danger"> </span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" disabled placeholder="Enter Display Order" />
                <span asp-validation-for="Description" class="text-danger"> </span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Author"> </label>
                <input class="form-control" asp-for="Author" disabled placeholder="Enter Category Name" />
                <span asp-validation-for="Author" class="text-danger"> </span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="ISBN"></label>
                <input class="form-control" asp-for="ISBN" disabled placeholder="Enter Display Order" />
                <span asp-validation-for="ISBN" class="text-danger"> </span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="CategoryId"></label>
                <input class="form-control" asp-for="CategoryId" disabled placeholder="Enter Category Id" />
                <span asp-validation-for="CategoryId" class="text-danger"> </span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="ListPrice"> </label>
                <input class="form-control" asp-for="ListPrice" disabled placeholder="Enter Category Name" />
                <span asp-validation-for="ListPrice" class="text-danger"> </span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Price"></label>
                <input class="form-control" asp-for="Price" disabled placeholder="Enter Display Order" />
                <span asp-validation-for="Price" class="text-danger"> </span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price50"> </label>
                <input class="form-control" asp-for="Price50" disabled placeholder="Enter Category Name" />
                <span asp-validation-for="Price50" class="text-danger"> </span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Price100"></label>
                <input class="form-control" asp-for="Price100" disabled placeholder="Enter Display Order" />
                <span asp-validation-for="Price100" class="text-danger"> </span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash-fill"></i>Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                </div>
            </div>


        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
