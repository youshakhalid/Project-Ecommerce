@page
@model Temp.Pages.Categories.IndexModel

<div class="container" >
    
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Category List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Category
            </a>
        </div>
    </div>
    

<table class ="table table-striped table-bordered">
    <thead>

    <tr>
        <th>
            Id
        </th>
        <th>
            Category Name
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
            @foreach (var obj in Model.category.OrderBy(x => x.DisplayOrder))
        {

        <tr class="align-middle">
            <td>
                @obj.Id
            </td>
            <td>
                @obj.Name
            </td>
            
            <td>
                <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                    </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

</div>

